{
    "sourceRoot": "src",
    "compilerOptions": {
        "skipLibCheck": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2021",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "typeRoots": [ "./src/types", "./node_modules/@types"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", "typings"]
}
