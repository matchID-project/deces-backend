{
  "name": "deces-backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build:lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "build:tsoa": "mkdir -p src/routes && mkdir -p src/api && ./node_modules/.bin/tsc src/tsoa.ts --outDir dist && node dist/tsoa.js",
    "build:ts": "./node_modules/.bin/tsc --outDir dist",
    "build": "npm run build:lint && npm run build:tsoa && npm run build:ts",
    "start": "node .",
    "watch-ts": "npm run build:lint && npm run build:tsoa && ./node_modules/.bin/tsc --outDir dist -w",
    "watch-node": "nodemon .",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Cristian Brokate",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.2",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^4.1.3",
    "tsoa": "^2.5.13",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.7.7",
    "@types/swagger-ui-express": "^4.1.1",
    "concurrently": "^5.1.0",
    "nodemon": "^2.0.2",
    "tslint": "^6.0.0",
    "typescript": "^3.7.5"
  }
}
